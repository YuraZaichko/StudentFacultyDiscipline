@model IEnumerable<StudentGroupFacultyApp.Models.Faculty>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FacultyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyName)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.FacultyId }) |
            @Html.ActionLink("Подробно", "Details", new { id=item.FacultyId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.FacultyId })
        </td>
    </tr>
}

</table>
